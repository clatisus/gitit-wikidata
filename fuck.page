#include <bits/stdc++.h>

int main(){
    int a, b;
    scanf("%d%d", &a, &b);
    if (a == b){
        puts("0 / 1");
        return 0;
    }
    if (a > b){
        std::swap(a, b);
    }
    int ans = 2 * a * b;
    for (int i = 0; i < a; ++ i){
        int min1 = INT_MAX, min2 = INT_MAX;
        for (int j = 0; j < b; ++ j){
            min1 = std::min(min1, (a * j + i) % b);
            min2 = std::min(min2, b - (a * j + i) % b);
        }
        if (min1 + 1 == min2){
            ans = std::min(2 * min1 + 1, ans);
        }
        else if (min1 + 1 < min2){
            ans = std::min(ans, 2 * (min1 + 1));
        }
        else{
            ans = std::min(ans, 2 * min2);
        }
    }
    int gcd = std::__gcd(2 * a - ans, 2 * a * b);
    int x = (2 * a - ans) / gcd, y = 2 * a * b / gcd;
    printf("%d / %d\n", x, y);
    return 0;
}
